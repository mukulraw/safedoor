<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/dard_shade"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pro"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/socity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:padding="2dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/profiled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/use"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Profile" />


        <TextView
            android:id="@+id/accounting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/useedit"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Accounting" />

        <TextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/boa"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Notice Board" />


        <TextView
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/even"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Event" />


        <TextView
            android:id="@+id/facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/facilit"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Facility Booking" />


        <TextView
            android:id="@+id/booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/bookingg"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="My Bookings" />


        <TextView
            android:id="@+id/inventor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/begs"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Inventory" />


        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/helpp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Help Desk" />


        <TextView
            android:id="@+id/discussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/dissc"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Discussion Forum" />


        <TextView
            android:id="@+id/keeper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/gatee"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Gate Keeper" />


        <TextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/feedback"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Feedback" />


        <TextView
            android:id="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/developer"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Developer Feedback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cdcdcd" />


        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/logout"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Logout"/>


    </LinearLayout>

</ScrollView>